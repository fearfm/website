{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@organisms/*": [
        "src/organisms/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@templates/*": [
        "src/templates/*"
      ]
    }
  },
  "include": [
    "./src/**/**/*"
  ]
}
